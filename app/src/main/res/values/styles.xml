<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- Style to be used to buttons, applying borderless style from material design -->
    <style name="AppButtom" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppButtom.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppButtom.Purple">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppButtom.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppButtom.Dummy">
        <item name="android:textColor">@color/blue</item>
        <item name="android:text">""</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!--
    Apply margin to bottom and end for buttons that will
    be placed at the bottom-end corner of the app
    -->
    <style name="AppButtom.White.ParentBottomEnd">
        <item name="android:layout_marginBottom">@dimen/margin_button_parent_corners</item>
        <item name="android:layout_marginEnd">@dimen/margin_button_parent_corners</item>
    </style>

    <style name="AppButtom.Dummy.ParentBottomEnd">
        <item name="android:layout_marginBottom">@dimen/margin_button_parent_corners</item>
        <item name="android:layout_marginEnd">@dimen/margin_button_parent_corners</item>
    </style>

    <style name="AppButtom.Blue.ParentBottomEnd">
        <item name="android:layout_marginBottom">@dimen/margin_button_parent_corners</item>
        <item name="android:layout_marginEnd">@dimen/margin_button_parent_corners</item>
    </style>

    <style name="AppButtom.Purple.ParentBottomEnd">
        <item name="android:layout_marginBottom">@dimen/margin_button_parent_corners</item>
        <item name="android:layout_marginEnd">@dimen/margin_button_parent_corners</item>
    </style>

    <!-- Primary attributes to all texts in this app -->
    <style name="AppText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppText.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppText.Purple">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppText.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--
    Default attributes for the triangularized background
    that must be placed under android.support.constraint.ConstraintLayout
    -->
    <style name="TriangularizedPurpleImageBackground">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_bg_pink_pallet_triangularized</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


</resources>
