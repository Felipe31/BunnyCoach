<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_Statistics_dummy_space"
        android:background="@drawable/drawable_gradient_background_statistics_activity"/>

    <android.support.v4.widget.Space
        android:id="@+id/fragment_Statistics_dummy_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_big"
        app:layout_constraintBottom_toTopOf="@id/fragment_statistics_title_days_worked"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_Statistics_dummy_space"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/fragment_statistics_title_days_worked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_title_days_worked_last_week"
        app:layout_constraintBottom_toTopOf="@+id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_marginStart="@dimen/margin_big"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_big"
        android:text="@string/statistics_day_of_the_week_monday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_statistics_day_of_the_week_tuesday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_day_of_the_week_tuesday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintEnd_toStartOf="@+id/fragment_statistics_day_of_the_week_wednesday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_statistics_day_of_the_week_monday" />

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_day_of_the_week_wednesday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintEnd_toStartOf="@+id/fragment_statistics_day_of_the_week_thursday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_statistics_day_of_the_week_tuesday" />

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_day_of_the_week_thursday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintEnd_toStartOf="@+id/fragment_statistics_day_of_the_week_friday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_statistics_day_of_the_week_wednesday" />

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_day_of_the_week_friday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintEnd_toStartOf="@+id/fragment_statistics_day_of_the_week_saturday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_statistics_day_of_the_week_thursday" />

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_day_of_the_week_saturday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintEnd_toStartOf="@+id/fragment_statistics_day_of_the_week_sunday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_statistics_day_of_the_week_friday" />

    <TextView
        android:id="@+id/fragment_statistics_day_of_the_week_sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_day_of_the_week_sunday"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/fragment_statistics_day_of_the_week_monday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/fragment_statistics_day_of_the_week_saturday" />

    <ipb.dam.apptrainer.home.components.CircularSeekBar
        android:id="@+id/fragment_statistics_circular_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- TODO Fix margins/size of the circular seek bar -->
    <!-- TODO change line color and ball color -->

</android.support.constraint.ConstraintLayout>