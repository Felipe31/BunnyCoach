<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@drawable/ic_bg_pink_pallet_triangularized">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="64dp"
        android:paddingRight="64dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_bunny_coach_web" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/user_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            app:backgroundTint="@color/textColor"
            android:textColor="@color/textColor"
            android:inputType="textEmailAddress"
            android:paddingTop="16dp"
            android:text="@string/email_example_txt" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/passwd_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            app:backgroundTint="@color/textColor"
            android:paddingTop="16dp"
            android:text="1234567890"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:text="@string/forgot_passwd"
                    android:textColor="@color/textColor" />

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:layout_alignParentRight="true"
                    android:text="@string/login_btn"
                    android:textColor="@color/textColor" />

            </RelativeLayout>
            <TextView
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:text="@string/register_btn"
                android:textColor="@color/textColor" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>