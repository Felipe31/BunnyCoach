<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_home_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        style="@style/TriangularizedPurpleImageBackground"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/content_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        style="@style/AppButtom.Purple.ParentBottomEnd"
        android:id="@+id/content_home_button_check"
        android:text="@string/check_exercises_button"
        app:layout_constraintBottom_toBottomOf="@+id/content_home_parent"
        app:layout_constraintEnd_toStartOf="@+id/content_home_parent" />

</android.support.constraint.ConstraintLayout>